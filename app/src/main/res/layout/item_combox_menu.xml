<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_combox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_combox_icon"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp" />



    <TextView
        android:id="@+id/item_combox_caption"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@id/item_combox_icon"
        android:text="线号："
        android:textColor="#000"
        android:textSize="@dimen/txtfontsize" />



    <TextView
        android:id="@+id/item_combox_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@id/item_combox_caption"
        android:gravity="left"
        android:text=""
        android:textColor="#000"
        android:textSize="@dimen/txtfontsize" />

    <ImageView
        android:id="@+id/item_combox_more"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/jiantou1" />

    <TextView
        android:id="@+id/item_combox_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/item_combox_more"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_combox_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#c2c2c2"
        android:visibility="gone" />


</RelativeLayout>
