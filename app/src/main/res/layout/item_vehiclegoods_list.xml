<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_vehiclegoods_id"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="1"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/et_vehiclegoods_prefix"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="品牌"
        android:inputType="text"
        android:paddingStart="2dp"
        android:text=""
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_vehiclegoods_tname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingStart="10dp"
        android:text="千斤顶"
        android:textSize="18dp" />


    <ImageView
        android:id="@+id/tv_vehiclegoods_jian"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:src="@drawable/jian" />



    <TextView
        android:id="@+id/tv_vehiclegoods_qty"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="12"
        android:textSize="30dp" />



    <ImageView
        android:id="@+id/tv_vehiclegoods_add"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:src="@drawable/add" />


    <TextView
        android:id="@+id/tv_vehiclegoods_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:text="个"
        android:textSize="18dp" />
</LinearLayout>

